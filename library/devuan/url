#!/bin/sh

set -eu

curl -s https://us.images.linuxcontainers.org/images/devuan/ascii/amd64/default/ |
	awk '
	BEGIN {
		FS="/"
	}
	/\[DIR\]/ {
		gsub(/<[^>]*>/,"")
		last=$1
	}

	END {
		printf "https://us.images.linuxcontainers.org/images/devuan/ascii/amd64/default/%s/rootfs.tar.xz\n",last
	}
	' | xargs wget
